                    </div>
                </div>

            </div>
            <div class="modal-body">

                <div class="clearfix">
                    <div class="form-group">
                        @Html.Label("Detalhamento")
                        @Html.TextAreaFor(m => m.Observacoes, new { @class = "form-control", @type = "text", @cols = "5", @rows = "10", @required = "true", @id = "Observacao" })

                        <script>CKEDITOR.replace("Observacao");</script>
                    </div>
                </div>
            </div>

