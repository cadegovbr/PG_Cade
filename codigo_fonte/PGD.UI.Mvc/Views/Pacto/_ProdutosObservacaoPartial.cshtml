@model PGD.Application.ViewModels.ProdutoViewModel
@using (Ajax.BeginForm("AtualizaObservacaoProduto", "Pacto", new AjaxOptions() { OnSuccess = "alterarObservacaoProdutoSuccess", OnFailure = "defaultFailureHandler", OnBegin = "showLoading" }))
