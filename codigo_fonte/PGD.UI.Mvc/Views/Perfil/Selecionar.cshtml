
@{
    ViewBag.Title = "Selecionar Perfil";
}

<br /><br />
@using (Html.BeginForm())
{
    <div class="col-md-8 col-md-offset-2">
        <div class="form-horizontal">

            <div class="panel panel-default">
                <div class="panel-heading">Selecione o perfil desejado:</div>
                <input type="hidden" id="urlRedirect" name="UrlRedirect" value="@ViewBag.UrlRedirect"/>
                <div class="panel-body text-center">
                    <div class="row">
                        <div class="col-md-4 col-md-offset-2">
                            @Html.RadioButton("Perfil", PGD.Domain.Enums.Perfil.Dirigente, false, new { @id = "perfilDirigente" })
                            @Html.Label("Dirigente", new { @for = "perfilDirigente" })
                        </div>
                        <div class="col-md-4">
                            @Html.RadioButton("Perfil", PGD.Domain.Enums.Perfil.Solicitante,false,new {@class="cssSolicitante",@id="perfilSolicitante" })
                            @Html.Label("Solicitante", new { @for="perfilSolicitante"})
                        </div>
                    </div>
                    <br />
                    <div class="row centered">
                        <button id="btnAutenticar" type="submit" class="btn btn-success">Autenticar</button>
                    </div>
                </div>
            </div>
        </div>
    </div>


}
