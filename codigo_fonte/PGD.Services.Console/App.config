  <appSettings>
    <add key="ambiente" value="Desenvolvimento" />
    <add key="gravarEmailEmArquivo" value="true" />
    <add key="caminhoArquivoEmail" value="C:\\logs\\EmailsPGD\\" />
    <add key="modificarAssuntoConformeAmbiente" value="true" />
    <add key="ida:Wtrealm" value="https://pgd-h.cgu.gov.br/" />
    <add key="SIGRHAPI" value="https://localhost/sigrhapi/" />
    <add key="URL_PGD" value="https://localhost/pgd/" />    
  </appSettings>
  <nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" autoReload="true" internalLogLevel="Info" internalLogFile="c:\temp\internal-nlog.txt" throwExceptions="true">
    <targets>
      <!-- database target -->
      <target name="database" xsi:type="Database" connectionString="xxxx" commandText="insert into dbo.LogComum                                                      (DataLog, SiglaOrigem, LoginUsuario, Mensagem, StackTrace, NivelLog)                           values (@dataLog,@sigOrigem,@loginUsuario,@mensagem,@stackTrace,@level)">
        <parameter name="@dataLog" layout="${date:format=yyyy-MM-dd HH\:mm\:ss.fff}" />
        <parameter name="@sigOrigem" layout="PGDg" />
        <parameter name="@loginUsuario" layout="null" />
        <parameter name="@mensagem" layout="${message:withException=false}" />
        <parameter name="@level" layout="${level:uppercase=true}" />
        <parameter name="@stackTrace" layout="${exception:format=tostring:maxInnerExceptionLevel=5:separator=\r\n}" />
      </target>
    </targets>
    <rules>
      <!-- database logger -->
      <logger levels="Error,Warn,Info,Debug" name="*" writeTo="database" />
    </rules>
  </nlog>
  <system.net>
    <mailSettings>
      <smtp from="xxxxxx@xxxx.gov.br" deliveryMethod="Network">
        <network host="xxxxxxxx" port="25" defaultCredentials="false" enableSsl="true" userName="xxxxx" password="xxxx" />
      </smtp>
    </mailSettings>
  </system.net>
  
  <connectionStrings>
    <add name="PGDConnectionString" connectionString="Server=localhost;Database=MMA.PGD;User Id=sa;Password=123456;" providerName="System.Data.SqlClient" />
  </connectionStrings>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.6.1" />
  </startup>
  <entityFramework>
    <defaultConnectionFactory type="System.Data.Entity.Infrastructure.LocalDbConnectionFactory, EntityFramework">
      <parameters>
        <parameter value="mssqllocaldb" />
      </parameters>
    </defaultConnectionFactory>
    <providers>
      <provider invariantName="System.Data.SqlClient" type="System.Data.Entity.SqlServer.SqlProviderServices, EntityFramework.SqlServer" />
    </providers>
  </entityFramework>
